<div class="container">
  <div class="row pt-7">
    <div class="col col-lg-6 offset-lg-3">
      <div class="card">
        <div class="card-header background">
          <h4 class="mt-2"><%= @neelz_name_of_study %></h4>
        </div>
        <div class="card-body background">
          <%= form_for(:session, url: '/neelz/enter_room') do |f| %>
            <div class="form-group">
              <div class="input-icon">
                <span class="input-icon-addon">
                  <i class="fas fa-at"></i>
                </span>
                <%= f.text_field :email_proband, class: "form-control", placeholder: "E-Mail-Adresse des Probanden", value: "" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-icon">
                <span class="input-icon-addon">
                  <i class="fas fa-key"></i>
                </span>
                <%= f.password_field :password, class: "form-control", placeholder: tra("password"), value: "" %>
              </div>
            </div>
            <div class="card-footer px-0">
              <%= f.submit tra("login"), class: "btn btn-primary btn-block signin-button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>